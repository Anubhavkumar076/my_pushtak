<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity">

    
    <RelativeLayout
        android:id="@+id/maintop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:minHeight="?android:attr/actionBarSize" >

        <ImageView
            android:id="@+id/navigationnn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/clear_icon"/>

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="CHANGE PASSWORD"
                android:maxLines="1"
                android:gravity="center_horizontal"
                android:textColor="#3f3e3e"
                android:textSize="15sp" />

        </RelativeLayout>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:id="@+id/maintop2"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/bg_border1"
        android:layout_height="265dp">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Old Password*"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#212121" />




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/r1"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="10dp"
                android:padding="10dp"
                android:background="@drawable/bg_border1">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00ffffff"
                    android:gravity="center_vertical"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:hint="Enter Current Password"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:id="@+id/currentpswd"/>

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="new Password*"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="100dp"
                android:textColor="#212121" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/r2"
                android:layout_marginTop="130dp"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/bg_border1">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00ffffff"
                    android:gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:hint="Enter new Password"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:id="@+id/newpswd"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retype new Password*"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="180dp"
                android:textColor="#212121" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/r3"
                android:layout_marginTop="210dp"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/bg_border1">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00ffffff"
                    android:gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:hint="Retype new Password"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:id="@+id/retpswd"/>

            </RelativeLayout>







    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">


    </LinearLayout>




    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Change Password"
        android:textColor="@android:color/white"
        android:background="#008cff"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="60dp"
        android:layout_below="@+id/maintop2"
        />

















</RelativeLayout>