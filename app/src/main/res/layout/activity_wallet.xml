<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Wallet">



    <RelativeLayout
        android:id="@+id/maintop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:minHeight="?android:attr/actionBarSize" >

        <ImageView
            android:id="@+id/navigationnn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/back_icon"/>

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:maxEms="6"
                android:text="WALLET"
                android:maxLines="1"
                android:textColor="#3f3e3e"
                android:textSize="20sp" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/maintop3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:minHeight="?android:attr/actionBarSize" >


        <EditText
            android:layout_width="120dp"
            android:layout_height="2dp"
android:layout_marginLeft="40dp"
            android:id="@+id/v1"
            android:layout_marginTop="80dp"

            />
        <view
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="80dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD MONEY"
            android:textColor="@android:color/white"
            android:background="#01b9f5"
            android:layout_toRightOf="@+id/v1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/maintop2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"
        android:background="@drawable/bg_border1"
        android:minHeight="?android:attr/actionBarSize" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="amount Added:"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Closing Amount:"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="170dp"
            android:textSize="18dp"
            />


        <View
            android:layout_width="2dp"
            android:layout_height="80dp"
            android:background="@color/ash"
            android:layout_marginLeft="160dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/ash"
            android:layout_marginTop="80dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction id:"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"
            />



    </RelativeLayout>
</RelativeLayout>