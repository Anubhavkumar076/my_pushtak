<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:id="@+id/main_linear"
        >



        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="10% Off"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22.5sp"
            android:textColor="#000"
            android:id="@+id/offer_percent"
            android:background="@drawable/grey_border_box"
            />






        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Code:"
            android:textSize="22.5sp"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:id="@+id/offer_code"
            android:background="@drawable/grey_border_box"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:id="@+id/main_linear_2"
        android:layout_below="@id/main_linear">



        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Expiry:"
            android:gravity="center"
            android:background="@drawable/grey_border_box"
            android:textSize="22.5sp"
            android:textColor="#000"
            android:id="@+id/offer_expiry"
            />





        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Expiry Date"
            android:textSize="22.5sp"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:id="@+id/offer_expiry_date"
            android:background="@drawable/grey_border_box"/>

    </LinearLayout>

</RelativeLayout>